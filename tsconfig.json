{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "outDir": "./out",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "allowJs": true,
        "checkJs": false,
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}